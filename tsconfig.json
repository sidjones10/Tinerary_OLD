{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "bundler",
      "jsx": "preserve",
      "esModuleInterop": true,
      "strict": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"]
      },
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "noEmit": true,
      "incremental": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "types": ["next", "node", "shadcn-ui", "lucide-react"], // Ensure this includes "next"
      "plugins": [
        {
          "name": "next"
        }
      ]
    },
    "include": [
      "next-env.d.ts",
      ".next/types/**/*.ts",
      "**/*.ts",
      "**/*.tsx",
, "next.config.js"    ],
    "exclude": [
      "node_modules"
    ]
  }

