{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "node16",
      "jsx": "preserve",
      "esModuleInterop": true,
      "strict": true,
      "baseUrl": "./",
      "paths": {
        "@/*": ["src/*"]
      },
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "noEmit": true,
      "incremental": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "plugins": [
        {
          "name": "next"
        }
      ]
    },
    "include": [
      "next-env.d.ts",
      ".next/types/**/*.ts",
      "**/*.ts",
      "**/*.tsx",
      "node_modules/tailwindcss/**/*.d.ts"  // Include Tailwind types here
    ],
    "exclude": [
      "node_modules"
    ]
  }

